@model role_topMVC.ViewModels.DashboardViewModel
<main>
        <h2>aprovar recusar eventos</h2>
        <section id="status-pacotes">
            <h3>Status dos eventos</h3>
            <div id="painel">
                <div class="box-status-pacotes aprovados">
                    <h4>Aprovados</h4>
                    <p>@Model.PacotesAprovados</p>
                </div>
                <div class="box-status-pacotes pendentes">
                    <h4>Pendentes</h4>
                    <p>@Model.PacotesPendentes</p>
                </div>
                <div class="box-status-pacotes reprovados">
                    <h4>Reprovados</h4>
                    <p>@Model.PacotesReprovados</p>
                </div>
            </div>
        </section>

        <section id="lista-contratos">
            <h3>Lista de contratos</h3>
            <table>
                <thead>
                    <tr>
                        <th rowspan="2">Nome</th>
                        <th rowspan="2">cpf</th>
                        <th colspan="2">dia do evento</th>
                        <th colspan="2" rowspan="2">Aprovar</th>
                    </tr>

                    <tr>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                    </tr>
                
                </thead>
                <tfoot>
                    <tr>
                        <td colspan="6">
                            <p>Pedidos atualizados em @DateTime.Now</p>
                        </td>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var pacote in Model.pacotes)
                    {
                        <tr>
                            <td>@pacote.Cliente.Nome</td>
                            <td>@pacote.Cliente.Cpf</td>
                            <td>@pacote.Contrato.Nome</td>
                            <td><a href='@Url.Action("Aprovar", "Pacote", new {id = @pacote.Id})'><i class="fas fa-check"></i></a></td>
                            <td><a href='@Url.Action("Reprovar", "Pacote", new {id = @pacote.Id})'><i class="fas fa-times"></i></a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </section>

    </main>
